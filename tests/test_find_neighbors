import sys 
sys.path.append("swap_puzzle/")

import unittest 
from grid import Grid
from graph import Graph

class TestFindNeighbors(unittest.TestCase):

    def test_find_neighbors(self):
        self.graph = Graph([1, 2, 3, 4])
        self.graph.add_edge(1, 2)
        self.graph.add_edge(2, 3)
        self.graph.add_edge(1, 3)
        self.graph.add_edge(3, 4)
        # Checking neighbors for a specific node
        neighbors_1 = set(self.graph.find_neighbors(1))
        self.assertEqual(neighbors_1, {2, 3})
        
        neighbors_2 = set(self.graph.find_neighbors(2))
        self.assertEqual(neighbors_2, {1, 3})

        neighbors_3 = set(self.graph.find_neighbors(3))
        self.assertEqual(neighbors_3, {1, 2, 4})

        neighbors_4 = set(self.graph.find_neighbors(4))
        self.assertEqual(neighbors_4, {3})


if __name__ == '__main__':
    unittest.main()